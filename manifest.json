{
  "manifest_version": 2,
  "name": "Ninhidrina - Uncovering canvas fingerprints.",
  "description": "Canvas fingerprints are generated by websites to track unaware users. Ninhidrina uncovers canvas fingerprints to enhance transparency.",
  "version": "1.0",
  "background": {
    "scripts": [
      "background/fingerprints-receiver.js"
    ]
  },
  "content_scripts": [{
    "js": [
      "content_scripts/canvas-fingerprinting.js",
      "content_scripts/cs-bootstrap.js"
    ],
    "run_at": "document_start",
    "matches": ["<all_urls>"],
    "all_frames": true
  }],
  "browser_action": {
    "default_icon": "icon18.png",
    "default_title": "ninhidrina",
    "default_popup": "popup/popup.html"
  },
  "icons": {
    "18": "icon18.png",
    "36": "icon36.png",
    "48": "icon48.png",
    "144": "icon.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "webNavigation",
    "background",
    "storage",
    "unlimitedStorage",
    "<all_urls>"
  ]
}
